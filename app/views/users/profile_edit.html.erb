<div class="parallax-container">
  <div class="parallax">
    <%= image_tag('profile/bg.jpg') %>
  </div>
</div>
<script>
    $('.parallax').parallax();
</script>

<%= form_for(@user, url: user_profile_update_path) do |f| %>
  <div class="section orange lighten-5">
    <div class="container">
      <div class="row">
        <div class="col s12 m4 l2"></div>
        <div class="col s12 m4 l8 center-align">
          <%= f.file_field :profile_picture,  id: "imgupload",  style:"display:none"%>
          <% if @user.profile_picture.present? %>
            <%= image_tag @user.profile_picture_url, id: "ImageUpload", class: "circle pic_pulse" %>
          <% else %>
            <%= image_tag 'profile/dp.png', id: "ImageUpload", class: "circle pic_pulse" %>
          <% end %>
        </div>
        <div class="col s12 m4 l2 right-align"></div>
      </div>
      <div class="row center-align">
          <%= f.text_field :name, id: "icon_prefix", placeholder: 'Nickname'%>
      </div>
    </div>
    <div class="row right-align">
      <div class="col s12">
        <%= f.button type: "submit", class: 'btn btn-floating btn-large cyan pulse' do %>
            <i class="material-icons">done_all</i>
        <% end %>
      </div>
    </div>
    <div class="row container">
      <div class="col s1"></div>
      <div class="col s1"></div>
      <div class="col s1"></div>
      <div class="col s1"></div>
      <div class="col s3">
        <!--      <a href="/dictionary" class="waves-effect waves-light btn-large #3f51b5 indigo"><i class="material-icons left">sort_by_alpha</i>Dictionary</a>-->
      </div>
      <div class="col s3">
        <!--      <a href="/articles" class="waves-effect waves-light btn-large #3f51b5 indigo"><i class="material-icons left">library_books</i>Articles</a>-->
      </div>
      <div class="col s1"></div>
    </div>
  </div>
  <div class="parallax-container">
    <div class="parallax">
      <%= image_tag 'profile/bg.jpg' %>
    </div>
  </div>
<% end %>

<script>
    $('#ImageUpload').click(function(){ $('#imgupload').trigger('click'); });
</script>
