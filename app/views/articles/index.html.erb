<%= render 'new_article_routing' %>
<div class="row">
  <div class="col s12 m4 l2"></div>
  <div class="col s12 m4 l8 center-align">
    <h2 class="blue-grey-text darken-3"> My Articles </h2>
  </div>
  <div class="col s12 m4 l2"></div>
</div>
<%= check_for_alert %>
<ul class="collection">
  <% @articles.each  do  |article|%>
    <li class="collection-item avatar">
      <i class="material-icons circle green">book</i>
      <a href="/articles/<%=article.id %>"><span class="title blue-grey-text lighten-4" style="font-size: 25px"><%=  article.head %></span></a>
        <% if article.tag_names.present? %>
          <div class="card-action">
            &ensp;&ensp;
            <% article.tag_names.each do |tag| %>
              <a href="#" class="purple-text lighten-4">#<%= tag %></a>
            <% end  %>
          </div>
        <% end %>
      <%= link_to delete_article_path(article.id), method: :delete,  class: "secondary-content col s9" do %>
        <i class="material-icons">delete</i>
      <% end %>
      <p>
        <%#= link_to "Show", article_path(article.id), method: :get, class: "purple-text text-darken-2"%>
        &nbsp;  &nbsp;
        <%= link_to "Edit", edit_article_path(article.id), method: :get, class: "blue-text text-darken-2" %>
      </p>
    </li>
  <% end %>
</ul>


<div class="container center-align">
<div class="row">
  <div class="col s4">
    <% @articles.each  do  |article|%>
      <div class="card">
        <div class="card-image">
          <%= image_tag 'profile/bg_1.jpg' %>
<!--          <span class="card-title"></span>-->
          <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
        </div>
        <div class="card-content">
          <p><%= article.head %>
            <% if article.tag_names.present? %>
<!--            <div class="card-action">-->
              <br>
              <% article.tag_names.each do |tag| %>
                <a href="#" class="purple-text lighten-4">#<%= tag %></a>
              <% end  %>
<!--            </div>-->
          <% end %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col s4">
    <% @articles.each  do  |article|%>
      <div class="card">
        <div class="card-image">
          <%= image_tag 'profile/bg_1.jpg' %>
          <!--          <span class="card-title"><%#= article.head %></span>-->
          <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
        </div>
        <div class="card-content">
          <p><%= article.head %> </p>
        </div>
      </div>
    <% end %>
  </div>
