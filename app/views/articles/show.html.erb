<div class="row">

</div>
<div class="row">
  <div class="col s1 left-align">
    <%= link_to articles_path, class: "btn-floating btn-large waves-effect waves-light green" do %>
      <i class="material-icons">home</i>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col s12 m4 l2"></div>
  <div class="col s12 m4 l8 center-align">
    <h1 class="blue-grey-text darken-4"> 「<%= @article.head %>」 </h1>
  </div>
  <div class="col s12 m4 l2"></div>
</div>
<div class="container left-align">
  <div class="col s6">
    <div class="row">
      <%= markdown(@article.description) %>
    </div>
  </div>
</div>

<div class="row"></div>
<div class="row"></div>
<div class="row"></div>
<div class="row"></div>
<div class="container">
  <div class="row">
    <h4 class="blue-grey-text darken-4"> Comments </h4>
  </div>
  <ul class="collection">
    <li class="collection-item avatar">
      <%= image_tag "profile/bg_1.jpg", class: "circle" %>
      <span class="title"><b><h6><%= @article.user.name %> </h6></b></span>
      <p>First Line <br>
      </p>
      <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
    </li>
  </ul>
  <%= form_for( @article_comments, :url => article_comment_create_path) do |f| %>
    <ul class="collection with-header">
      <li class="collection-item">
        <div class="row center-align">
          <div class="col s11">
            <div class="input-field">
                <%= f.hidden_field :articles_id, value: @article.id %>
                <%= f.hidden_field :users_id, value: @visitor_id %>
                <%= f.label :new_comment, for: "icon_prefix2" %>
                <%= f.text_area :response, id: "icon_prefix2", class: "materialize-textarea" %>
                <%#= f.submit  do %>
<!--                  <i class="material-icons prefix">mode_edit</i>-->
                <%# end %>
              <%= button_tag :type => "submit" do %>
                <i class="material-icons prefix">mode_edit</i>
              <% end %>
            </div>
          </div>
        </div>
      </li>
    </ul>
  <% end %>
</div>
<div class="row"></div>
<div class="row"></div>
<script>
    $('p').addClass("left-align");
</script>